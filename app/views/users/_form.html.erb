<%= render 'shared/errors', obj:@user %>
<%= form_with(model: @user, class: "shadow p-3 mb-3 bg-primary rounded", local:true) do |f| %>
  <div class="form-group row pt-1">
    <div class ="col-12 col-form-label pb-0">
      <%= f.label :username, class:"text-light" %>
    </div>
    <div class="col-12 pt-0">
      <%= f.text_field :username, class: "form-control shadow", placeholder: "Enter a username" %>
    </div>
  </div>  
  <div class="form-group row pt-1">
    <div class ="col-12 col-form-label pb-0">
      <%= f.label :email, class:"text-light"%>
    </div>
    <div class="col-12 pt-0">
      <%= f.email_field :email, class: "form-control shadow", placeholder: "Enter your email address" %>
    </div>
  </div> 
<div class="form-group row pt-1">
    <div class ="col-12 col-form-label pb-0">
      <%= f.label :password, class:"text-light"%>
    </div>
    <div class="col-12 pt-0">
      <%= f.password_field :password, class: "form-control shadow", placeholder: "Choose a password" %>
    </div>
  </div> 
  <div class="form-group row justify-content-md-center">
      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"btn btn-outline-light mt-2") %>
  </div>
    
<% end %>
