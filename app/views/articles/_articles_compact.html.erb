<% obj.each do |article| %>
    <div class="card bg-white rounded mb-2">
        <div class="card-body p-2">
          <h5 class="card-title mb-2"><%= link_to article.title, article_path(article), class: "text-success" %> 
            <small class="text-muted"><%= article.user.username %></small></h5>
          <p class="card-text"><%= truncate(article.description, length: 100) %></p>
        </div>
    </div>
<% end %>