<h1 class="text-center mb-3">Categories</h1>
      <div class="row justify-content-center mb-3">
         <div class="flickr_pagination">
           <%= will_paginate @categories %>
         </div>
      </div>
    <div class="row row-cols-xl-3">
      <% @categories.each do |category| %>
      
          <div class="card mt-1 mx-3 shadow mb-2 bg-secondary clearfix rounded">
            <div class="card-body p-2">
              
              <div class="card-title mb-0 text-center align-items-center">
                <%= link_to(category_path(category), class:'text-light') do %>
                  <%= category.name %>&nbsp;<span class="badge badge-light ml-3"><%= category.articles.count %></span>
                <% end %>
              </div>
              
            </div>
            
          </div>
       
      <% end %>
    </div>